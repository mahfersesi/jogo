             x:Class="jogo.MainPage"
             Shell.NavBarIsVisible="false">

    <Grid>
    <Grid.RowDefinitions>
    <RowDefinition Height="40"/>
    <RowDefinition Height="60"/>
    <RowDefinition Height="60"/>
    <RowDefinition Height="*"/>
